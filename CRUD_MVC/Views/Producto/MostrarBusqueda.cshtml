@model List<ProductoModelo>
@{
    ViewData["Title"] = "MostrarBusqueda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">

    <h5 class="card-header">Lista de Productos</h5>
    <div class="card-body">

        <a asp-action="Listar" asp-controller="Producto" class="btn btn-success">Listar Todos</a>
        <a asp-action="Buscar" asp-controller="Producto" class="btn btn-secondary">Buscar</a>
        <a asp-action="Listar" asp-controller="Categoria" class="btn btn-warning">Lista Categorias</a>

        <hr />

        @if (Model.Count > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Categoria</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductoId</td>
                            <td>@item.ProductoNombre</td>
                            <td>
                                $@item.ProductoPrecio
                            </td>
                            <td>@item.NombreCategoria</td>

                        </tr>
                    }
                </tbody>
            </table>
        }else{
            <h2>No hay datos para mostrar</h2>
        }
    </div>

</div>

